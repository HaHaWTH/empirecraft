From: Aikar <aikar@aikar.co>
Date: Thu, 31 Dec 2015 15:35:24 -0500
Subject: [PATCH] UUID based Skull Owner API

---
 .../java/org/bukkit/inventory/meta/SkullMeta.java  | 23 ++++++++++++++++++++++
 1 file changed, 23 insertions(+)

diff --git a/src/main/java/org/bukkit/inventory/meta/SkullMeta.java b/src/main/java/org/bukkit/inventory/meta/SkullMeta.java
index fab3119..c2eafe8 100644
--- a/src/main/java/org/bukkit/inventory/meta/SkullMeta.java
+++ b/src/main/java/org/bukkit/inventory/meta/SkullMeta.java
@@ -2,6 +2,8 @@ package org.bukkit.inventory.meta;
 
 import org.bukkit.Material;
 
+import java.util.UUID;
+
 /**
  * Represents a skull ({@link Material#SKULL_ITEM}) that can have an owner.
  */
@@ -15,6 +17,12 @@ public interface SkullMeta extends ItemMeta {
     String getOwner();
 
     /**
+     * Gets owners UUID if set
+     * @return
+     */
+    UUID getOwnerUUID();
+
+    /**
      * Checks to see if the skull has an owner.
      *
      * @return true if the skull has an owner
@@ -32,5 +40,20 @@ public interface SkullMeta extends ItemMeta {
      */
     boolean setOwner(String owner);
 
+    /**
+     * Sets owner by UUID
+     * @param uuid
+     * @return
+     */
+    boolean setOwnerUUID(UUID uuid);
+
+    /**
+     * Sets owner by UUID and Name if both are known
+     * @param owner
+     * @param uuid
+     * @return
+     */
+    boolean setOwner(String owner, UUID uuid);
+
     SkullMeta clone();
 }
