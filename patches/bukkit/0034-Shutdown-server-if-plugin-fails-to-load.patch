Subject: [PATCH] Shutdown server if plugin fails to load

---
 src/main/java/org/bukkit/plugin/SimplePluginManager.java | 1 +
 1 file changed, 1 insertion(+)

diff --git a/src/main/java/org/bukkit/plugin/SimplePluginManager.java b/src/main/java/org/bukkit/plugin/SimplePluginManager.java
index 166de84..631ed37 100644
--- a/src/main/java/org/bukkit/plugin/SimplePluginManager.java
+++ b/src/main/java/org/bukkit/plugin/SimplePluginManager.java
@@ -404,6 +404,7 @@ public final class SimplePluginManager implements PluginManager {
                 plugin.getPluginLoader().enablePlugin(plugin);
             } catch (Throwable ex) {
                 server.getLogger().log(Level.SEVERE, "Error occurred (in the plugin loader) while enabling " + plugin.getDescription().getFullName() + " (Is it up to date?)", ex);
+                if ("Empire".equals(plugin.getName())) { org.bukkit.Bukkit.getServer().shutdown(); } // EMC
             }
 
             HandlerList.bakeAll();
