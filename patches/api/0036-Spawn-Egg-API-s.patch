Subject: [PATCH] Spawn Egg API's

---
 src/main/java/com/empireminecraft/API.java | 20 ++++++++++++++++++++
 1 file changed, 20 insertions(+)

diff --git a/src/main/java/com/empireminecraft/API.java b/src/main/java/com/empireminecraft/API.java
index 09e0beea..5554c1d0 100644
--- a/src/main/java/com/empireminecraft/API.java
+++ b/src/main/java/com/empireminecraft/API.java
@@ -23,10 +23,30 @@
 
 package com.empireminecraft;
 
+import com.destroystokyo.paper.MinecraftKey;
 import org.bukkit.Bukkit;
+import org.bukkit.entity.EntityType;
+import org.bukkit.inventory.ItemStack;
+
+import javax.annotation.Nonnull;
 
 public interface API {
     static API get() {
         return Bukkit.getEmpireAPI();
     }
+
+    /**
+     * Gets Registered Entity Type for this spawn egg.
+     * @param bukkitItem
+     * @return
+     */
+    EntityType getTypeForSpawnEgg(@Nonnull ItemStack bukkitItem);
+
+    /**
+     * Changes the type of a Spawn Egg and returns new itemstack. ALWAYS USE THE RETURNED STACK
+     * @param bukkitItem
+     * @param key
+     * @return
+     */
+    ItemStack spawnEggAsType(@Nonnull ItemStack bukkitItem, @Nonnull MinecraftKey key);
 }
