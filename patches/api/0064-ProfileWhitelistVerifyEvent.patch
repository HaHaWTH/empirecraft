+package com.destroystokyo.paper.event.profile;
+
+import com.mojang.authlib.GameProfile;
+import org.bukkit.event.Event;
+import org.bukkit.event.HandlerList;
+
+/**
+ * Fires when the server needs to verify if a player is whitelisted.
+ *
+ * Plugins may override/control the servers whitelist with this event.
+ */
+public class ProfileWhitelistVerifyEvent extends Event {
+    private static final HandlerList handlers = new HandlerList();
+    private final GameProfile profile;
+    private boolean whitelisted;
+    private final boolean isOp;
+
+    public ProfileWhitelistVerifyEvent(final GameProfile profile, boolean whitelisted, boolean isOp) {
+        this.profile = profile;
+        this.whitelisted = whitelisted;
+        this.isOp = isOp;
+    }
+
+    public GameProfile getProfile() {
+        return profile;
+    }
+
+    public boolean isWhitelisted() {
+        return whitelisted;
+    }
+
+    public void setWhitelisted(boolean whitelisted) {
+        this.whitelisted = whitelisted;
+    }
+
+    @Override
+    public HandlerList getHandlers() {
+        return handlers;
+    }
+
+    public static HandlerList getHandlerList() {
+        return handlers;
+    }
+
+    public boolean isOp() {
+        return isOp;
+    }
+}
