 package com.empireminecraft;
 
 import com.destroystokyo.paper.MinecraftKey;
+import org.apache.commons.lang.exception.ExceptionUtils;
 import org.bukkit.Bukkit;
 import org.bukkit.entity.EntityType;
 import org.bukkit.inventory.ItemStack;
@@ -35,6 +36,23 @@ public interface API {
         return Bukkit.getEmpireAPI();
     }
 
+    static String stack() {
+        return ExceptionUtils.getFullStackTrace(new Throwable());
+    }
+
+    static void exception(Throwable e) {
+        exception(e.getMessage(), e);
+    }
+
+    static void exception(String msg, Throwable e) {
+        if (msg != null) {
+            System.err.println(msg);
+        }
+        for (String line : ExceptionUtils.getFullStackTrace(e).split("\n")) {
+            System.err.println(line);
+        }
+    }
+
