+package com.empireminecraft.api;
+
+import org.bukkit.entity.Entity;
+
+public abstract class EntityTask {
+    public int limit = -1;
+    public int count = 0;
+
+    public EntityTask() {}
+    public EntityTask(int limit) {
+        this.limit = limit;
+    }
+
+    public abstract void run(Entity entity);
+
+    public void abort() {
+        this.limit = 1;
+        this.count = 1;
+    }
