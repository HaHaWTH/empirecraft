Subject: [PATCH] Make Fireworks live a max of 5s

---
 src/main/java/net/minecraft/server/EntityFireworks.java | 1 +
 1 file changed, 1 insertion(+)

diff --git a/src/main/java/net/minecraft/server/EntityFireworks.java b/src/main/java/net/minecraft/server/EntityFireworks.java
index 64454f5..846443c 100644
--- a/src/main/java/net/minecraft/server/EntityFireworks.java
+++ b/src/main/java/net/minecraft/server/EntityFireworks.java
@@ -78,6 +78,7 @@ public class EntityFireworks extends Entity {
             this.world.addParticle("fireworksSpark", this.locX, this.locY - 0.3D, this.locZ, this.random.nextGaussian() * 0.05D, -this.motY * 0.5D, this.random.nextGaussian() * 0.05D);
         }
 
+        this.expectedLifespan = Math.min(this.expectedLifespan, this.locY >= 200 ? 0 : 20 * 5); // EMC
         if (!this.world.isStatic && this.ticksFlown > this.expectedLifespan) {
             this.world.broadcastEntityEffect(this, (byte) 17);
             this.die();
