+    {
+        int pos = commandLine.indexOf( ' ' );
+        if ( pos == -1 )
+        {
+            pos = commandLine.length();
+        }
+        String name = commandLine.substring( 0, pos );
+        if ( !allowedCommands.contains( name ) )
