 import org.bukkit.event.player.PlayerJoinEvent;
@@ -135,7 +136,7 @@ public abstract class PlayerList {
 
             if (entity != null) {
                 entity.o = true;
-                worldserver.addEntity(entity);
+                worldserver.addEntity(entity, CreatureSpawnEvent.SpawnReason.FORCE); // EMC
                 entityplayer.mount(entity);
                 entity.o = false;
             }
diff --git a/src/main/java/net/minecraft/server/World.java b/src/main/java/net/minecraft/server/World.java
index f9bb028..9c0ed18 100644
--- a/src/main/java/net/minecraft/server/World.java
+++ b/src/main/java/net/minecraft/server/World.java
@@ -975,13 +975,13 @@ public abstract class World implements IBlockAccess {
             }
