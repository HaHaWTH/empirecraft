 public class Spigot {
+    static AxisAlignedBB maxBB = AxisAlignedBB.a(0,0,0,0,0,0);
+    static AxisAlignedBB miscBB = AxisAlignedBB.a(0,0,0,0,0,0);
+    static AxisAlignedBB animalBB = AxisAlignedBB.a(0,0,0,0,0,0);
