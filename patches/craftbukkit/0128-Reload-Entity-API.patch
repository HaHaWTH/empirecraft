index eb4bf3d..c2a7afe 100644
--- a/src/main/java/org/bukkit/craftbukkit/entity/CraftEntity.java
+++ b/src/main/java/org/bukkit/craftbukkit/entity/CraftEntity.java
@@ -573,4 +573,11 @@ public abstract class CraftEntity implements org.bukkit.entity.Entity {
         return spigot;
     }
     // Spigot end
+
+    // EMC start
+    public boolean reloadEntity() {
+        entity = ((WorldServer) entity.world).entitiesByUUID.get(entity.getUniqueID());
+        return entity != null;
+    }
+    // EMC stop
 }
