 1 file changed, 3 insertions(+)

diff --git a/src/main/java/net/minecraft/server/TileEntityHopper.java b/src/main/java/net/minecraft/server/TileEntityHopper.java
index 712f0ce..b6cfac4 100644
--- a/src/main/java/net/minecraft/server/TileEntityHopper.java
+++ b/src/main/java/net/minecraft/server/TileEntityHopper.java
@@ -216,6 +216,8 @@ public class TileEntityHopper extends TileEntityContainer implements IHopper, IU
             }
 
             if (isFull()) { resetCooldown(); } // EMC
+
+            if (!this.isWaiting()) { resetCooldown(); } // EMC
             return false;
         } else {
             return false;
@@ -622,6 +624,7 @@ public class TileEntityHopper extends TileEntityContainer implements IHopper, IU
         this.g = i;
     }
 
+    public boolean isWaiting() { return n(); } // EMC
     public boolean n() {
         return this.g > 0;
     }
