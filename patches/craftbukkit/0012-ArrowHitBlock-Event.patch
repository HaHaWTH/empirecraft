@@ -308,7 +308,9 @@ public class EntityArrow extends Entity implements IProjectile {
                     this.shake = 7;
                     this.setCritical(false);
                     if (this.g.getMaterial() != Material.AIR) {
+                        if (new com.empireminecraft.customevents.ArrowHitBlockEvent(this.getBukkitEntity(), world.getWorld().getBlockAt(this.d, this.e, this.f)).callEvent()) { // EMC
                         this.g.a(this.world, blockposition1, iblockdata1, (Entity) this);
+                        } // EMC
                     }
                 }
             }
