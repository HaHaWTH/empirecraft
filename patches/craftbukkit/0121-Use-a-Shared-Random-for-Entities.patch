Subject: [PATCH] Use a Shared Random for Entities

---
 src/main/java/net/minecraft/server/Entity.java | 3 ++-
 1 file changed, 2 insertions(+), 1 deletion(-)

diff --git a/src/main/java/net/minecraft/server/Entity.java b/src/main/java/net/minecraft/server/Entity.java
index e382f8e..39d8711 100644
--- a/src/main/java/net/minecraft/server/Entity.java
+++ b/src/main/java/net/minecraft/server/Entity.java
@@ -99,6 +99,7 @@ public abstract class Entity implements ICommandListener {
     public float S;
     public boolean noclip;
     public float U;
+    public static Random SHARED_RANDOM = new Random();
     protected Random random;
     public int ticksLived;
     public int maxFireTicks;
@@ -158,7 +159,7 @@ public abstract class Entity implements ICommandListener {
         this.width = 0.6F;
         this.length = 1.8F;
         this.h = 1;
-        this.random = new Random();
+        this.random = SHARED_RANDOM; // EMC
         this.maxFireTicks = 1;
         this.justCreated = true;
         this.uniqueID = MathHelper.a(this.random);
