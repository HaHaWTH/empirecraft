From: Aikar <aikar@aikar.co>
Date: Mon, 1 Sep 2014 18:58:57 -0400
Subject: [PATCH] Only refresh abilities if its changed

---
 src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java | 3 ++-
 1 file changed, 2 insertions(+), 1 deletion(-)

diff --git a/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java b/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
index c569567..62e15d8 100644
--- a/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
+++ b/src/main/java/org/bukkit/craftbukkit/entity/CraftPlayer.java
@@ -1185,12 +1185,13 @@ public class CraftPlayer extends CraftHumanEntity implements Player {
 
     @Override
     public void setAllowFlight(boolean value) {
+        boolean needsUpdate = getHandle().abilities.canFly != value; // Spigot
         if (isFlying() && !value) {
             getHandle().abilities.isFlying = false;
         }
 
         getHandle().abilities.canFly = value;
-        getHandle().updateAbilities();
+        if (needsUpdate) getHandle().updateAbilities(); // Spigot
     }
 
     @Override
