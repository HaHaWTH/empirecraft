Subject: [PATCH] use a single Random instance for entities

Better distribution of random using 1 instance...
---
 src/main/java/net/minecraft/server/Entity.java | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/src/main/java/net/minecraft/server/Entity.java b/src/main/java/net/minecraft/server/Entity.java
index 606c315..eacee8e 100644
--- a/src/main/java/net/minecraft/server/Entity.java
+++ b/src/main/java/net/minecraft/server/Entity.java
@@ -99,7 +99,7 @@ public abstract class Entity implements ICommandListener {
     public float S;
     public boolean noclip;
     public float U;
-    protected Random random;
+    protected static final Random random = new Random(); // EMC
     public int ticksLived;
     public int maxFireTicks;
     public int fireTicks;
@@ -158,7 +158,7 @@ public abstract class Entity implements ICommandListener {
         this.width = 0.6F;
         this.length = 1.8F;
         this.h = 1;
-        this.random = new Random();
+        //this.random = new Random(); // EMC
         this.maxFireTicks = 1;
         this.justCreated = true;
         this.uniqueID = MathHelper.a(this.random);
