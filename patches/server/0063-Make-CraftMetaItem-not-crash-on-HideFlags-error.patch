Subject: [PATCH] Make CraftMetaItem not crash on HideFlags error


diff --git a/src/main/java/org/bukkit/craftbukkit/inventory/CraftMetaItem.java b/src/main/java/org/bukkit/craftbukkit/inventory/CraftMetaItem.java
index 10aafe6b05e0369b48a6bf4bce4fff25de893f86..d0d02fab4b66594481e77f470c3782180d6945ac 100644
--- a/src/main/java/org/bukkit/craftbukkit/inventory/CraftMetaItem.java
+++ b/src/main/java/org/bukkit/craftbukkit/inventory/CraftMetaItem.java
@@ -237,7 +237,12 @@ class CraftMetaItem implements ItemMeta, Damageable, Repairable, BlockDataMeta {
                 }
                 return null;
             }
-            throw new IllegalArgumentException(field + "(" + object + ") is not a valid " + clazz);
+            if (nullable) {
+                new IllegalArgumentException(field + "(" + object + ") is not a valid " + clazz).printStackTrace();
+            } else {
+                throw new IllegalArgumentException(field + "(" + object + ") is not a valid " + clazz);
+            }
+            return null;
         }
     }
 
