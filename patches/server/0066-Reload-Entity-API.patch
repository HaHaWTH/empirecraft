Subject: [PATCH] Reload Entity API

---
 .../org/bukkit/craftbukkit/entity/CraftEntity.java     | 10 ++++++++++
 1 file changed, 10 insertions(+)

diff --git a/src/main/java/org/bukkit/craftbukkit/entity/CraftEntity.java b/src/main/java/org/bukkit/craftbukkit/entity/CraftEntity.java
index d51fd49a2d..5252bcc2a7 100644
--- a/src/main/java/org/bukkit/craftbukkit/entity/CraftEntity.java
+++ b/src/main/java/org/bukkit/craftbukkit/entity/CraftEntity.java
@@ -846,4 +846,14 @@ public abstract class CraftEntity implements org.bukkit.entity.Entity {
         return getHandle().spawnedViaMobSpawner;
     }
     // Paper end
+    // EMC start
+    public boolean reloadEntity() {
+        Entity entity = ((WorldServer) this.entity.world).entitiesByUUID.get(this.entity.getUniqueID());
+        if (entity != null) {
+            this.entity = entity;
+            return true;
+        }
+        return false;
+    }
+    // EMC stop
 }
