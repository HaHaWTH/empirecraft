 public class PlayerAdvancements {
@@ -299,8 +301,15 @@ public class PlayerAdvancements {
                 advancement.getRewards().grant(this.player);
                 // Paper start - Add Adventure message to PlayerAdvancementDoneEvent
                 if (message != null && this.player.level.getGameRules().getBoolean(GameRules.RULE_ANNOUNCE_ADVANCEMENTS)) {
-                    this.playerList.broadcastSystemMessage(io.papermc.paper.adventure.PaperAdventure.asVanilla(message), ChatType.SYSTEM);
+                    // EMC start
+                    //this.playerList.broadcastSystemMessage(io.papermc.paper.adventure.PaperAdventure.asVanilla(message), ChatType.SYSTEM);
                     // Paper end
+                    AdvancementBroadcastEvent broadcastEvent = new AdvancementBroadcastEvent(this.player.getBukkitEntity());
+                    broadcastEvent.callEvent();
+                    for (Player player : broadcastEvent.getReceivers()) {
+                        player.sendMessage(message);
+                    }
+                    // EMC end
                 }
             }
         }
