+            IChatBaseComponent[] compArray = CraftChatMessage.fromString(text, true);
+            components = new IChatMutableComponent[compArray.length];
+            for (int i = 0; i < compArray.length; i++) {
+                components[i] = compArray[i].mutableCopy();
+            }
+        }
+
