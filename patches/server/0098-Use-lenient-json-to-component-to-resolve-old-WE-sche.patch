Subject: [PATCH] Use lenient json to component to resolve old WE schematic
 issue

---
 src/main/java/net/minecraft/server/IChatBaseComponent.java | 1 +
 src/main/java/net/minecraft/server/MCUtil.java             | 2 +-
 2 files changed, 2 insertions(+), 1 deletion(-)

diff --git a/src/main/java/net/minecraft/server/IChatBaseComponent.java b/src/main/java/net/minecraft/server/IChatBaseComponent.java
index fb97c51bb1a4cabc6b67d8f74a5f0b6e0fb6052c..ffe5a1fb76a3bcaff7f32e57a03d5b4f542cbcfb 100644
--- a/src/main/java/net/minecraft/server/IChatBaseComponent.java
+++ b/src/main/java/net/minecraft/server/IChatBaseComponent.java
@@ -450,6 +450,7 @@ public interface IChatBaseComponent extends Message, Iterable<IChatBaseComponent
             return (IChatBaseComponent) IChatBaseComponent.ChatSerializer.a.fromJson(jsonelement, IChatBaseComponent.class);
         }
 
+        @Nullable public static IChatBaseComponent lenientJsonToComponent(String json) { return b(json);} // EMC OBFHELPER
         @Nullable
         public static IChatBaseComponent b(String s) {
             return (IChatBaseComponent) ChatDeserializer.a(IChatBaseComponent.ChatSerializer.a, s, IChatBaseComponent.class, true);
diff --git a/src/main/java/net/minecraft/server/MCUtil.java b/src/main/java/net/minecraft/server/MCUtil.java
index 8a349964578e07e5ed13f801c57de68459220da9..d121b68c7f10025ad6b96aeaedbd543536cdf152 100644
--- a/src/main/java/net/minecraft/server/MCUtil.java
+++ b/src/main/java/net/minecraft/server/MCUtil.java
@@ -553,7 +553,7 @@ public final class MCUtil {
         }
         String string = compound.getString(key);
         try {
-            return IChatBaseComponent.ChatSerializer.jsonToComponent(string);
+            return IChatBaseComponent.ChatSerializer.lenientJsonToComponent(string); // EMC - use lenient json to component
         } catch (com.google.gson.JsonParseException e) {
             org.bukkit.Bukkit.getLogger().warning("Unable to parse " + key + " from " + compound +": " + e.getMessage());
         }
