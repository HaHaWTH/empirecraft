             c++;
         }
@@ -149,7 +151,7 @@ public class ShapedRecipes implements IRecipe {
                     }
                 }
 
-                if (!recipeitemstack.a(inventorycrafting.c(k, l))) {
+                if (!inventorycrafting.c(k, l).satisfiesRecipeRequirement(recipeitemstack)) { // EMC
                     return false;
                 }
