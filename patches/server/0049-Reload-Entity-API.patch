@@ -1298,4 +1298,14 @@ public abstract class CraftEntity implements org.bukkit.entity.Entity {
         return !entity.valid && entity.level.addFreshEntity(entity, reason);
     }
     // Paper end
+    // EMC start
+    public boolean reloadEntity() {
+        Entity entity = this.entity.level.getEntities().get(this.entity.getUUID());
+        if (entity != null) {
+            this.entity = entity;
+            return true;
+        }
+        return false;
+    }
+    // EMC end
 }
