+        final EntityTasksHandler.TaskList entityTasks = ((CraftEntity) entity).getHandle().entityTasks;
+        List<EntityTask> entityTasksList = entityTasks.computeIfAbsent(interval, k -> new ArrayList<EntityTask>(8));
