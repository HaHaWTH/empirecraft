index cb37e33ebc85bf572e418a23d8b30ddfbaf5873f..8f605931c2529d945fe64b1acd233065d750f3f0 100644
--- a/src/main/java/org/bukkit/craftbukkit/entity/CraftEntity.java
+++ b/src/main/java/org/bukkit/craftbukkit/entity/CraftEntity.java
@@ -15,6 +15,7 @@ import net.minecraft.server.level.EntityPlayer;
 import net.minecraft.server.level.PlayerChunk;
 import net.minecraft.server.level.PlayerChunkMap;
 import net.minecraft.server.level.TicketType;
+import net.minecraft.server.level.WorldServer;
 import net.minecraft.world.damagesource.DamageSource;
 import net.minecraft.world.entity.Entity;
 import net.minecraft.world.entity.EntityAreaEffectCloud;
@@ -1178,4 +1179,14 @@ public abstract class CraftEntity implements org.bukkit.entity.Entity {
         return getHandle().isTicking();
     }
     // Paper end
+    // EMC start
+    public boolean reloadEntity() {
+        Entity entity = ((WorldServer) this.entity.world).entitiesByUUID.get(this.entity.getUniqueID());
+        if (entity != null) {
+            this.entity = entity;
+            return true;
+        }
+        return false;
+    }
+    // EMC stop
 }
