@@ -289,6 +289,7 @@ public abstract class EntityLiving extends Entity {
                 }
 
                 if (!this.world.isClientSide && this.isPassenger() && this.getVehicle() != null && !this.getVehicle().bi()) {
+                    this.dismountReason = org.bukkit.event.vehicle.VehicleExitEvent.DismountReason.WATER; // EMC
                     this.stopRiding();
                 }
             } else if (this.getAirTicks() < this.bw()) {
@@ -3203,6 +3204,7 @@ public abstract class EntityLiving extends Entity {
 
     public void entitySleep(BlockPosition blockposition) {
         if (this.isPassenger()) {
+            if (this instanceof EntityHuman) this.dismountReason = org.bukkit.event.vehicle.VehicleExitEvent.DismountReason.PLAYER; // EMC
             this.stopRiding();
         }
 
