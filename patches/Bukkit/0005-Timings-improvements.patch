+package org.bukkit;
+
+import java.io.PrintStream;
+import java.util.ArrayList;
+import java.util.LinkedList;
+import java.util.List;
+
+/**
+ * Provides custom timing sections for /timings merged
+ */
+public class CustomTimingsHandler {
+
+    final public String name;
+    public long count = 0;
+    public long totalTime = 0;
+    public long violations = 0;
+    CustomTimingsHandler parent = null;
+    final public LinkedList<Long> currentStack = new LinkedList<Long>();
+
+    final public static List<CustomTimingsHandler> allList = new ArrayList<CustomTimingsHandler>();
+
+
+    public CustomTimingsHandler(String name) {
+        this.name = name;
+        allList.add(this);
+    }
+    public CustomTimingsHandler(String name, CustomTimingsHandler parent) {
+        this(name);
+        this.parent = parent;
+    }
+
+    static public void printTimings(PrintStream printStream) {
+        printStream.println("Minecraft - ** indicates it's already counted by another timing");
+        for (CustomTimingsHandler timings : allList) {
+            long time = timings.totalTime;
+            long count = timings.count;
+            if (count == 0) continue;
+            long avg = time / count;
+
+            printStream.println("    " + timings.name + " Time: " + time + " Count: " + count + " Avg: " + avg + " Violations: " + timings.violations);
+        }
+    }
+
+    static public void reload() {
+        if (!Bukkit.getServer().getPluginManager().useTimings()) return;
+        for (CustomTimingsHandler timings : allList) {
+            timings.reset();
+        }
+    }
+
+    public void startTiming() {
+        if (!Bukkit.getServer().getPluginManager().useTimings()) return;
+        long start = System.nanoTime();
+        currentStack.addLast(start);
+        if (parent != null) {
+            parent.currentStack.addLast(start);
+        }
+    }
+
+    public void stopTiming() {
+        if (!Bukkit.getServer().getPluginManager().useTimings()) return;
+
+        Long start = currentStack.pollLast();
+        if (start == null) {
+            return;
+        }
+        long diff = System.nanoTime() - start;
+        totalTime += diff;
+        if (diff > 50000000) {
+            violations++;
+        }
+        count++;
+        if (parent != null) {
+            parent.stopTiming();
+        }
+    }
+
+    public void reset() {
+        count = 0;
+        violations = 0;
+        totalTime = 0;
+    }
+}
